{
  "$schema": "https://json.schemastore.org/package",
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "10.4.1",
    "@nestjs/core": "10.4.1",
    "@nestjs/platform-express": "10.4.1",
    "dotenv": "16.4.5",
    "env-var": "7.5.0",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.4",
    "@nestjs/testing": "10.4.1",
    "@types/jest": "29.5.12",
    "@types/node": "22.5.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "typescript": "5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".+(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@slibs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@slibs/api(|/.*)$": "<rootDir>/libs/api/src/$1"
    }
  }
}