{
  "$schema": "https://json.schemastore.org/package",
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand",
    "typeorm": "ts-node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:gen": "pnpm typeorm migration:generate migrations/migration -p -d ormconfig.ts",
    "migration:run": "pnpm typeorm migration:run -d",
    "migration:revert": "pnpm typeorm migration:revert -d"
  },
  "dependencies": {
    "@nestjs/common": "10.4.1",
    "@nestjs/core": "10.4.1",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/typeorm": "10.0.2",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "env-var": "7.5.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "passport": "0.7.0",
    "passport-custom": "1.1.1",
    "pg": "8.12.0",
    "rxjs": "7.8.1",
    "typeorm": "0.3.20",
    "typeorm-naming-strategies": "4.1.0",
    "typeorm-transactional": "0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.4",
    "@nestjs/testing": "10.4.1",
    "@types/bcrypt": "5.0.2",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/lodash": "4.17.7",
    "@types/node": "22.5.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "supabase": "1.191.3",
    "supertest": "7.0.0",
    "testcontainers": "10.12.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".+(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@slibs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@slibs/api(|/.*)$": "<rootDir>/libs/api/src/$1",
      "^@slibs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@slibs/user(|/.*)$": "<rootDir>/libs/user/src/$1",
      "^@slibs/testing(|/.*)$": "<rootDir>/libs/testing/src/$1"
    }
  }
}