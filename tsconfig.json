{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@slibs/common": ["libs/core/common/src"],
      "@slibs/common/*": ["libs/core/common/src/*"],
      "@slibs/api": ["libs/core/api/src"],
      "@slibs/api/*": ["libs/core/api/src/*"],
      "@slibs/testing": ["libs/core/testing/src"],
      "@slibs/testing/*": ["libs/core/testing/src/*"],
      "@slibs/database": ["libs/system/database/src"],
      "@slibs/database/*": ["libs/system/database/src/*"],
      "@slibs/redis-queue": ["libs/system/redis-queue/src"],
      "@slibs/redis-queue/*": ["libs/system/redis-queue/src/*"],
      "@slibs/redis": ["libs/system/redis/src"],
      "@slibs/redis/*": ["libs/system/redis/src/*"],
      "@slibs/storage": ["libs/system/storage/src"],
      "@slibs/storage/*": ["libs/system/storage/src/*"],
      "@slibs/user": ["libs/biz/user/src"],
      "@slibs/user/*": ["libs/biz/user/src/*"],
      "@slibs/infra-instance": ["libs/biz/infra-instance/src"],
      "@slibs/infra-instance/*": ["libs/biz/infra-instance/src/*"]
    }
  }
}
